<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="@drawable/back"
    android:layout_height="fill_parent"
    >


    <TableRow
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:paddingTop="10px">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="181dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/pp" />
    </TableRow>

    <TableRow
        android:layout_marginTop="20dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Nama   :"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dip"
            ></TextView>

        <TextView
            android:id="@+id/screenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="Abdul Malik Fajar"
            android:textSize="18dp"
            android:textColor="@color/white">

        </TextView>

    </TableRow>


    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="NIM      :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/NIM"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="200602033"
            android:textColor="@color/white"
            android:textSize="20sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="Prodi    :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/prodi"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="Teknik Informatika"
            android:textColor="@color/white"
            android:textSize="20sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="Alamat :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Pancor Bermi"
            android:textSize="20sp">

        </TextView>


    </TableRow>
    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="Hobby :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/hobby"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Travelling"
            android:textSize="20sp">

        </TextView>


    </TableRow>
</TableLayout>